<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".WriteActivity">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edTxtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10dp"
        android:hint="@string/title_hint"
        android:textSize="@dimen/_18sp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edTxtDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10dp"
        android:hint="@string/desc_hint"
        android:textSize="@dimen/_18sp"
        app:layout_constraintTop_toBottomOf="@id/edTxtTitle" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_42dp"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_42dp"
        android:background="#03DAC5"
        android:id="@+id/submitPost"
        android:text="@string/post"
        android:textColor="#FFF"
        app:layout_constraintTop_toBottomOf="@id/edTxtDesc" />


</androidx.constraintlayout.widget.ConstraintLayout>